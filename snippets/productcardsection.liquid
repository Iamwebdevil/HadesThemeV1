<section class="w-screen">
    <div class="m-4 mx-auto max-w-screen-lg rounded-md text-gray-600">  
        <div class="relative flex h-full flex-col text-gray-600 md:flex-row">
            <div class="mx-auto flex items-center px-5 pt-1 md:p-8">
                <img class="block h-auto max-w-full rounded-md h-80 w-72" src="{{ product.featured_image | image_url }}" alt="Shop image" />
            </div>
            <div class="relative p-8 md:w-4/6"> 
                <div class="flex flex-col md:flex-row">
                    <h2 class="mb-2 text-2xl font-black">{{ product.title }}</h2>
                    <span class="ml-2 text-xs uppercase">{{ product.vendor }}</span>
                </div>
                <p class="mt-3 font-sans text-base tracking-normal">{{ product.description | truncate : 400 }}</p>
                <div class="flex flex-col md:flex-row md:items-end">
                    <p class="mt-6 text-4xl font-black">{{product.price | money }}</p>
                    <span class="ml-2 text-xs uppercase line-through">{{ product.compare_at_price | money }}</span>
                </div>
                <div class="mt-8 flex flex-col sm:flex-row">
                    <a href="{{ product.url }}">
                    <button class="mr-2 mb-4 flex cursor-pointer items-center justify-center rounded-md bg-thirdcolor py-2 px-8 text-center text-white transition duration-150 ease-in-out hover:translate-y-1 hover:bg-black">
                    <svg xmlns="http://www.w3.org/2000/svg" class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                    View Now
                    </button>
                </a>
                </div>
            </div>
            
        </div>
    </div>
    
</section>