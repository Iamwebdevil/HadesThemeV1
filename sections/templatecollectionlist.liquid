          </ol>
        </nav>
        <div class= "max-w-screen md:max-w-6xl mx-auto" >
            <div class="grid grid-cols-1 mx-auto md:grid-cols-3 gap-2">
                {% for collection in collections %}
                    {% if collection.all_products_count > 0 %}
                        <main class="my-10 w-full md:w-[400px] h-[400px] flex items-center justify-center flex-wrap">
                            <!--  card -->
                            <a href="{{ collection.url }}">
                            <div class="bg-white w-full md:w-full h-[400px] shadow-md rounded my-3 md:m-3">
                              <div class="h-[300px] w-full">
                                <img class="object-cover rounded-t transition duration-1000 ease-in-out hover:scale-105 transform" src="{{ collection.featured_image | image_url }}" alt="piÃ±a">
                              </div>
                              <div class="w-full h-1/4 p-3">
                                <a href="#" class=" hover:text-maincolor text-gray-700">
                                  <span class="text-lg font-semibold uppercase tracking-wide ">{{ collection.title }}</span>
                                </a>
                                <p class="text-gray-600 text-sm leading-5 mt-1">Products : {{ collection.all_products_count }}</p>
                              </div>
                            </div>
                        </a>
                          </main>
                    {% endif %}
                {% endfor %}
            </div>
        </div>

</div>