<div class="flex flex-col items-center my-8">
    <div class="mx-auto mt-5 mb-[60px] max-w-[510px] text-center lg:mb-20">
        <h2
          class="mb-4 text-3xl font-bold text-dark sm:text-4xl md:text-[40px]"
        >
            {{ section.settings.title }}
        </h2>
    </div>
    <div class="max-w-6xl mx-auto">
       <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
           {% for product in section.settings.featuredCollection.products limit : section.settings.numberOfProducts %}
               {% render 'productcardV3', product : product %}
           {% endfor %}
       </div>
   
   </div>
   </div>
   
   
   
   {% schema %}
   {
       "name" : "Product Crousel 1",
       "settings" : [
           {
               "type" : "text",
                "id" : "title",
                "default" : "Featured Collection",
                "label" : "Title"
           },
           {
               "type" : "collection",
                "id" : "featuredCollection",
                "label" : "Collection"
   
           },
           {
               "type" : "range",
               "id" : "numberOfProducts",
               "min" : 4,
               "max" : 12,
               "default" : 4,
               "label" : "Nummber of products to display"
           }
       ],
       "presets" : [
           {
           "name" : "Product Crousel V1"
           }
       ]
   }
   {% endschema %}